// Write a function to get Nth node in a Linked List
#include<stdio.h>
#include<stdlib.h>

struct Node{
    int data;
    struct Node* next;
};
struct Node* head=NULL;
void Insert(int x)
{
    struct Node* temp = (struct Node*)malloc(sizeof(struct Node*));
    temp->data=x;
    temp->next=head;
    head=temp;
}
int search(int n)
{
    struct Node* temp = (struct Node*)malloc(sizeof(struct Node*));;
    temp=head;
    int pos=0;
    while(temp!=NULL)
    {   pos++;
        temp=temp->next;
        if(temp->data==n)
             {
                 return pos+1;
             }
    }
    printf("\nNode not found !!\n");
    return 0;
}
 
int main()
{
    int i,n,element,num;
    printf("How many elements you want to insert in the list ? ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("\nEnter the element : ");
        scanf("%d",&num);
        Insert(num);
    }
    printf("\nEnter element to be searched : ");
    scanf("%d",&element);
    int position=search(element);
    //if(position==0)
            //printf("\nElement not found! \n");
    //else if(position==n)
            //printf("\nElement %d found at %d position",element,n); 
    
    printf("\nElement %d found at %d position",element,n-position); 
    return 0;
}
